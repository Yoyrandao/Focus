{
  "name": "Focus",
  "background": {
    "scripts": ["background/index.ts"],
    "persistent": true
  },
  "content_scripts": [
    {
      "js": ["content/index.ts"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ],
  "browser_action": {
    "default_popup": "pages/popup/index.html"
  },
  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "http://*/*",
    "https://*/*",
    "unlimitedStorage",
    "storage"
  ]
}
